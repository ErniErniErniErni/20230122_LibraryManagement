<!-- Details.cshtml in LibraryManagement/Views/Customer folder-->
@model List<LibraryManagement.ViewModels.CustomerViewModel>

<h1>Customer</h1>
<a href="@Url.Action("Create", "Customer")" class="btn btn-primary">Create Customer</a>
<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.Name</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="Customer">
                        <input type="hidden" name="customerId" value="@customer.CustomerId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
