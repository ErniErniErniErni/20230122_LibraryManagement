<!-- Details.cshtml in LibraryManagement/Views/Book folder-->
@model List<LibraryManagement.ViewModels.BookViewModel>

<h1>Book Details</h1>
<a href="@Url.Action("Create", "Book")" class="btn btn-primary">Create Book</a>
<table class="table">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Author Name</th>
            <th>Branch Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.AuthorName</td>
                <td>@book.BranchName</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="Book">
                        <input type="hidden" name="bookId" value="@book.BookId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr> 
        }
    </tbody>
</table>


