<!-- Details.cshtml in LibraryManagement/Views/LibraryBranch folder-->

@model List<LibraryManagement.ViewModels.LibraryBranchViewModel>
    
<h1>Library Branches</h1>
<a href="@Url.Action("Create", "LibraryBranch")" class="btn btn-primary">Create Branch</a>
<table class="table">
    <thead>
        <tr>
            <th>Branch ID</th>
            <th>Branch Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var branch in Model)
        {
            <tr>
                <td>@branch.LibraryBranchId</td>
                <td>@branch.BranchName</td>
                <td>
                    <form method="post" asp-action="Delete" asp-controller="LibraryBranch">
                        <input type="hidden" name="branchId" value="@branch.LibraryBranchId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

